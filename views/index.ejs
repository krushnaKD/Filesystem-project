<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="main text-zinc-300 w-full min-h-screen bg-zinc-900 flex flex-col items-center p-10  gap-10">
      <div class="form">
        <form class="flex flex-col justify-center" action="/create" method="post">
          <input
            class="block px-5 py-2 bg-zinc-800 mb-2 "
            type="text"
            placeholder="name"
            name="name"
          />
          <textarea class="resize-none block px-5 py-2 bg-zinc-800 mb-2"
            placeholder="write description"
           
            name="details"
            id=""
          ></textarea>
          <input class="bg-zinc-400 px-2 py-1 text-zinc-700 rounded-md text-lg " type="submit" />
        </form>
      </div>
      <div class="tasks flex gap-2 flex-wrap">
        <% if(files.length>0) {%>
             <% files.forEach(function(val){ %>
              <div class="tesk w-72 px-3 py-4 rounded-md bg-zinc-800">
                <h1 class="text-zinc-300 text-3xl tracking-tight "><%= val %></h1>
                <a href="/files/<%= val %>" class="text-blue-500 text-xl inline-block mt-3">read more</a>
              </div>
        <% }) %>
        <%}else { %>
       <h3 class="text-zinc-300 text-xl">No files yet</h3>
    <%  } %>
         

      </div>
    </div>
  </body>
</html>
